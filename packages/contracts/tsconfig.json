{
  "compilerOptions": {
    "target": "ES2022",
    "module": "esnext",
    "moduleResolution": "bundler",
    "moduleDetection": "force",
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "stripInternal": true,
    "verbatimModuleSyntax": true,
    "outDir": "dist"
  },
  "include": ["src/**/*"],
  "exclude": ["dist"]
}
