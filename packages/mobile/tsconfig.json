{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "baseUrl": "./src",
    "paths": {
      "@/api/*": ["./src/api/*"],
      "@/providers/*": ["./src/providers/*"],
      "@/theme/*": ["./src/theme/*"],
      "@/ui/*": ["./src/ui/*"],
      "@rayon/api/*": ["../../api/*"]
    }
  },
  "include": [
    "expo-env.d.ts",
    "./src/**/*",
    "./app/**/*"
  ]
}
