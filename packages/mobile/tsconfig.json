{
  "extends": "../config/tsconfig/base.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "baseUrl": ".",
    "exactOptionalPropertyTypes": false,
    "paths": {
      "@/api/*": ["./src/api/*"],
      "@/providers/*": ["./src/providers/*", "../../src/providers/*"],
      "@/theme/*": ["./src/theme/*"],
      "@/ui/*": ["./src/ui/*"],
      "@/linking": ["./src/linking"],
      "@/storage/*": ["./src/storage/*"],
      "@/features/*": ["./src/features/*"],
      "@/screens/*": ["./src/screens/*"],
      "@/hooks/*": ["./src/hooks/*"]
    }
  },
  "include": [
    "expo-env.d.ts",
    "./src/**/*",
    "./app/**/*",
    "./tools/**/*"
  ]
}
