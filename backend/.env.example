# === Core Service ===
NODE_ENV=production
APP_HOST=0.0.0.0
APP_PORT=5000
BACKEND_BASE_URL=https://api.rayon.example.com
CORS_ORIGIN=https://rayon.example.com
APP_LOG_LEVEL=info
APP_ENABLE_CSP=1

# === Database & Cache ===
DATABASE_URL=postgresql://user:password@host:5432/rayon
DATABASE_SHADOW_URL=postgresql://user:password@host:5432/rayon_shadow
REDIS_URL=redis://user:password@host:6379/0

# === Supabase ===
SITE_SUPABASE_URL=https://<project-ref>.supabase.co
SITE_SUPABASE_SECRET_KEY=<service-role-key>
SUPABASE_SERVICE_ROLE_KEY=<service-role-key>
SUPABASE_URL=https://<project-ref>.supabase.co
SUPABASE_SECRET_KEY=<service-role-key>

# === Sessions ===
ADMIN_SESSION_SECRET=<32+ char secret>
ADMIN_SESSION_COOKIE=admin_session
ADMIN_SESSION_TTL_HOURS=24
FAN_SESSION_SECRET=<32+ char secret>
FAN_SESSION_COOKIE=fan_session
FAN_SESSION_TTL_HOURS=720

# === Admin Seed (optional) ===
# ADMIN_DEFAULT_EMAIL=admin@example.com
# ADMIN_DEFAULT_PASSWORD=changeme
# ADMIN_DEFAULT_NAME=System Admin
# ADMIN_API_TOKEN=
# ADMIN_SESSION_COOKIE_DOMAIN=.example.com
# FAN_SESSION_COOKIE_DOMAIN=.example.com

# === Storage (optional) ===
# S3_ENDPOINT=https://s3.example.com
# S3_REGION=us-east-1
# S3_BUCKET=rayon-uploads
# S3_ACCESS_KEY_ID=
# S3_SECRET_ACCESS_KEY=
# S3_PUBLIC_BASE_URL=https://cdn.example.com

# === Payments & SMS (optional) ===
# MTN_MOMO_PAY_CODE=0700XXXXXX
# AIRTEL_MONEY_PAY_CODE=0700XXXXXX
# SMS_WEBHOOK_TOKEN=
# SMS_PARSE_CONFIDENCE_THRESHOLD=0.65

# === AI / Onboarding ===
OPENAI_API_KEY=<openai-api-key>
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_ONBOARDING_MODEL=gpt-4.1-mini
ONBOARDING_API_TOKEN=<server-onboarding-token>

# === Metrics ===
# METRICS_TOKEN=
