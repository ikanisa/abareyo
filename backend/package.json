{
  "name": "rayon-backend",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "dist/main.js",
  "scripts": {
    "start": "node dist/main.js",
    "start:dev": "NODE_ENV=development ts-node --swc -r tsconfig-paths/register src/main.ts",
    "build": "tsc -p tsconfig.build.json",
    "lint": "eslint 'src/**/*.ts'",
    "test": "jest --runInBand",
    "test:e2e": "jest --config test/e2e/jest.e2e.config.ts --runInBand",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate deploy",
    "prisma:dev": "prisma migrate dev --name init",
    "seed": "ts-node --swc prisma/seed.ts",
    "env:check": "ts-node --swc tools/validate-env.ts"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.744.0",
    "@aws-sdk/s3-request-presigner": "^3.744.0",
    "@fastify/cookie": "^9.4.1",
    "@fastify/cors": "^9.0.1",
    "@fastify/helmet": "^13.0.0",
    "@nestjs/common": "^11.0.0",
    "@nestjs/config": "^4.0.0",
    "@nestjs/core": "^11.0.0",
    "@nestjs/mapped-types": "^2.0.4",
    "@nestjs/platform-fastify": "^11.0.0",
    "@nestjs/platform-socket.io": "^11.0.0",
    "@nestjs/websockets": "^11.0.0",
    "@prisma/client": "^6.1.0",
    "@rayon/contracts": "file:../packages/contracts",
    "bcryptjs": "^2.4.3",
    "bullmq": "^5.13.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "fastify": "^4.28.1",
    "openai": "^4.52.0",
    "pino": "^9.5.0",
    "prom-client": "^15.1.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.0",
    "@types/jest": "^29.5.12",
    "@types/node": "^22.7.4",
    "@types/supertest": "^6.0.3",
    "eslint": "^9.0.0",
    "jest": "^29.7.0",
    "prisma": "^6.1.0",
    "reflect-metadata": "^0.2.2",
    "supertest": "^7.1.1",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8.3"
  }
}
