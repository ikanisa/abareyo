{
  "name": "vite_react_shadcn_ts",
  "private": true,
  "version": "0.0.0",
  "workspaces": [
    "packages/*",
    "docs"
  ],
  "packageManager": "npm@11.4.2",
  "type": "module",
  "engines": {
    "node": ">=20.0.0 <21"
  },
  "scripts": {
    "predev": "node scripts/preflight-dev.mjs",
    "dev": "npm run predev && next dev",
    "prebuild": "npm run build:packages",
    "build": "next build",
    "build:netlify": "npm run preflight && npm run build:packages && next build && npm run postbuild:netlify",
    "postbuild:netlify": "node scripts/postbuild-netlify.mjs",
    "preflight": "node scripts/preflight.mjs",
    "build:packages": "npm run build:contracts && npm run build:mobile-widgets",
    "build:contracts": "npm run build --prefix packages/contracts",
    "build:mobile-widgets": "npm run build --prefix packages/mobile/widgets",
    "lint": "eslint app src tests/unit",
    "lint:a11y": "eslint \"app/(routes)\" src/components/admin --max-warnings=0",
    "lint:fix": "eslint app src tests/unit --fix",
    "lint:pwa": "npm run build && lhci autorun --config=./lighthouserc.json",
    "lint:lh": "npm run lint:pwa",
    "build:capacitor": "next build && next export -o dist",
    "cap:sync": "npm run build:capacitor && npx cap sync",
    "cap:android": "npm run cap:sync && npx cap open android",
    "cap:ios": "npm run cap:sync && npx cap open ios",
    "start": "next start",
    "check:backend": "node scripts/check-backend-endpoint.mjs",
    "health": "node -e \"fetch('http://localhost:3000/api/health').then(r=>r.text()).then(console.log).catch(console.error)\"",
    "typecheck": "tsc --noEmit && tsc -b tsconfig.build.json",
    "type-check": "npm run typecheck",
  "test": "npm run typecheck && npm run test:unit",
  "test:unit": "vitest run",
  "coverage": "vitest run --coverage",
    "test:native": "vitest run tests/unit/native",
    "test:native:android": "vitest run tests/unit/native/android",
    "test:native:ios": "vitest run tests/unit/native/ios",
    "test:android:instrumentation": "vitest run tests/unit/native/android",
    "test:mobile:smoke": "npm run test:smoke --prefix packages/mobile",
    "test:watch": "vitest",
    "test:e2e": "playwright test",
    "test:e2e:a11y": "playwright test tests/e2e/a11y",
    "test:e2e:mobile": "playwright test --project=mobile-small --project=mobile-medium",
    "test:e2e:headed": "playwright test --headed",
    "detox:build:android": "detox build --configuration android.emu.release",
    "detox:test:android": "detox test --configuration android.emu.release --headless",
    "detox:android": "npm run detox:build:android && npm run detox:test:android",
    "detox:build:ios": "detox build --configuration ios.sim.release",
    "detox:test:ios": "detox test --configuration ios.sim.release --headless",
    "detox:ios": "npm run detox:build:ios && npm run detox:test:ios",
    "ci:detox": "tsx tools/ci/run-detox.mjs",
    "setup:hooks": "git config core.hooksPath .githooks",
    "seed": "tsx scripts/seed.ts",
    "ci:guard-payments": "tsx scripts/ci/assert-ussd-only.ts",
    "ci:check-env": "node scripts/check-frontend-env.mjs",
    "reports:worker": "tsx scripts/reports/report-schedule-worker.ts",
    "validate:deployment": "node scripts/validate-deployment-readiness.mjs",
    "ci:verify-mobile-qa": "node tools/ci/verify-mobile-qa.mjs",
    "sbom": "node scripts/generate-sbom.mjs",
    "check:licenses": "node scripts/enforce-licenses.mjs"
  },
  "dependencies": {
    "@capacitor/app": "^5.0.8",
    "@capacitor/core": "^5.0.8",
    "@capacitor/haptics": "^5.0.8",
    "@capacitor/keyboard": "^5.0.8",
    "@capacitor/status-bar": "^5.0.8",
    "@hookform/resolvers": "^3.10.0",
    "@radix-ui/react-accordion": "^1.2.11",
