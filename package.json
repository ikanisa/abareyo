    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.10.2",
    "@capacitor/cli": "^5.0.8",
    "@cyclonedx/cyclonedx-npm": "^4.1.0",
    "@eslint/js": "^8.57.0",
    "@lhci/cli": "^0.14.0",
    "@playwright/test": "^1.50.1",
    "@supabase/postgres-meta": "^0.93.1",
    "@tailwindcss/typography": "^0.5.16",
