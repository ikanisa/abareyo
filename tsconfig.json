{
  "extends": "./packages/config/tsconfig/base.json",
  "compilerOptions": {
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ES2020"
    ],
    "module": "esnext",
    "jsx": "preserve",
    "baseUrl": ".",
    "exactOptionalPropertyTypes": false,
    "paths": {
      "@/app/_lib/*": [
        "app/_lib/*"
      ],
      "@/app/*": [
        "./app/*"
      ],
      "@/components/*": [
        "./src/components/*"
      ],
      "@/hooks/*": [
        "./src/hooks/*"
      ],
      "@/lib/*": [
        "./src/lib/*"
      ],
      "@/providers/*": [
        "./src/providers/*"
      ],
      "@/views/*": [
        "./src/views/*"
      ],
      "@/config/*": [
        "./src/config/*",
        "./config/*"
      ],
      "@rayon/contracts": [
        "./packages/contracts/src/index.ts"
      ],
      "@rayon/contracts/*": [
        "./packages/contracts/src/*.ts"
      ],
      "@rayon/api/*": [
        "./packages/api/src/*",
        "./packages/api/types/*"
      ],
      "@rayon/config/*": [
        "./packages/config/*"
      ],
      "@rayon/design-tokens": [
        "./packages/design-tokens/src/index.ts"
      ],
      "@rayon/design-tokens/*": [
        "./packages/design-tokens/src/*.ts"
      ],
      "@rayon/ui": [
        "./packages/ui/src/index.ts"
      ],
      "@rayon/ui/*": [
        "./packages/ui/src/*"
      ],
      "@/*": [
        "./src/*"
      ]
    },
    "noEmit": true,
    "incremental": true,
    "tsBuildInfoFile": "./node_modules/.cache/web.tsbuildinfo",
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "app/**/*.ts",
    "app/**/*.tsx",
    "src/**/*.ts",
    "src/**/*.tsx",
    "packages/mobile/**/*.ts",
    "packages/mobile/**/*.tsx",
    "packages/ui/**/*.ts",
    "packages/ui/**/*.tsx",
    "tests/**/*.ts",
    "tests/**/*.tsx",
    "**/*.cjs",
    "**/*.mjs",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "backend",
    ".next"
  ]
}
