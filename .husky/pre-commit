#!/bin/sh

echo "Running pre-commit checks..."
echo ""

# Linting
echo "→ Linting..."
npm run lint || {
  echo "✗ Lint failed"
  exit 1
}

echo ""
echo "✓ Pre-commit checks passed!"
echo ""
echo "Note: Type-check and unit tests are run in CI."
echo "To run them locally: npm run type-check && npm run test:unit"
