{
  "title": "Rayon Observability",
  "description": "Core service SLOs and operational metrics",
  "schemaVersion": 39,
  "version": 1,
  "refresh": "30s",
  "timezone": "browser",
  "panels": [
    {
      "type": "timeseries",
      "title": "HTTP Requests (by status)",
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        {
          "expr": "sum by (statusCode) (rate(rayon_http_requests_total[1m]))",
          "legendFormat": "{{statusCode}}"
        }
      ],
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 }
    },
    {
      "type": "timeseries",
      "title": "p95 HTTP Latency (s)",
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum by (le) (rate(rayon_http_request_duration_seconds_bucket[5m])))",
          "legendFormat": "p95"
        }
      ],
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 }
    },
    {
      "type": "stat",
      "title": "Error Budget Burn (24h)",
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        {
          "expr": "sum(increase(rayon_http_requests_total{statusCode=~\"5..\"}[24h])) / sum(increase(rayon_http_requests_total[24h]))",
          "instant": true
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percentunit",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 0.01 },
              { "color": "red", "value": 0.02 }
            ]
          }
        }
      },
      "gridPos": { "h": 5, "w": 6, "x": 0, "y": 8 }
    },
    {
      "type": "stat",
      "title": "Current Correlation Sample Rate",
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        {
          "expr": "sum(rate(rayon_http_requests_total[5m]))",
          "instant": true
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "req/s"
        }
      },
      "gridPos": { "h": 5, "w": 6, "x": 6, "y": 8 }
    },
    {
      "type": "timeseries",
      "title": "SMS Queue Depth",
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        {
          "expr": "sum by (queue) (rayon_sms_queue_depth)",
          "legendFormat": "{{queue}}"
        }
      ],
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 13 }
    },
    {
      "type": "timeseries",
      "title": "Gate Scan Outcomes",
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        {
          "expr": "sum by (outcome) (rate(rayon_gate_scans_total[5m]))",
          "legendFormat": "{{outcome}}"
        }
      ],
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 13 }
    },
    {
      "type": "timeseries",
      "title": "Loki Ingestion Rate",
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        {
          "expr": "sum(rate(loki_request_duration_seconds_count{route=\"/loki/api/v1/push\"}[1m]))",
          "legendFormat": "push"
        }
      ],
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 21 }
    }
  ]
}
