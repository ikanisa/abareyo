{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "version": 2,
  "framework": "nextjs",
  "installCommand": "npm ci",
  "buildCommand": "npm run build",
  "outputDirectory": ".next",
  "rewrites": [
    {
      "source": "/shop/:slug+",
      "destination": "/shop/:slug"
    }
  ],
  "redirects": [
    {
      "source": "/store",
      "destination": "/shop",
      "permanent": true
    }
  ]
}
